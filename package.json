{
    "name": "rock-blaster",
    "version": "1.0.0",
    "description": "Classic arcade revival in HTML5 + TypeScript ",
    "type": "module",
    "scripts": {
        "start": "npx http-server -P http://0.0.0.0:${PORT} ./dist",
        "dev": "vite",
        "preview": "vite preview",
        "format": "npx prettier --write .",
        "format-check": "npx prettier --check .",
        "lint": "npx eslint .",
        "compile": "tsc",
        "build": "npm run compile && npm run lint&& npm run format-check && vite build",
        "verify": "npm run format-check && npm run lint && npm run compile"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yackx/rockblaster.git"
    },
    "author": "Youri Ackx @yackx",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/yackx/rockblaster/issues"
    },
    "homepage": "https://github.com/yackx/rockblaster#readme",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "eslint": "^8.33.0",
        "eslint-config-prettier": "^8.6.0",
        "prettier": "2.8.3",
        "typescript": "^4.9.5",
        "vite": "^4.1.1"
    }
}
